<?xml version='1.0' encoding='utf-8'?>
<widget id="com.trequend.weather" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Weather</name>
  <description>
    Cordova app for weather
  </description>
  <author href="https://github.com/trequend">
    Dmitry Balakin
  </author>
  <content src="index.html" />
  <preference name="StatusBarBackgroundColor" value="#ffffff" />
  <preference name="StatusBarStyle" value="default" />
  <icon src="assets/icon.png" />
  <hook type="before_prepare" src="utils/prebuild.js" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
